<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.desislava.market.activities.StartActivity"
    tools:showIn="@layout/activity_start">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/layoutStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/peachyImgBnt"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/peachy"
                android:onClick="onClick" />


            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ImageButton
                android:id="@+id/markoImgBnt"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/marko"
                android:onClick="onClick" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="10dp" />

            <ImageButton
                android:id="@+id/doggyBnt"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/doggy"
                android:onClick="onClick" />


        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
